@namespace EventSchedulingAppv2.Models
@model Event

<h2>Update Event</h2>

<!--Basic form to collect input for updating an event with current data-->
@using (Html.BeginForm("UpdateToDatabase", "Event", "Post"))
{

    <input asp-for="EventID" type="hidden" value="@Model.EventID" />

    <label asp-for="EventDate" class="control-label">Event Date</label>
    <input type="date" name="EventDate" class="form-control" value="@Model.EventDate.ToString("yyyy-MM-dd")" min="@DateTime.Now.ToString("yyyy-MM-dd")" />

    <label asp-for="FirstName" class="control-label">First Name</label>
    <input type="text" name="FirstName" class="form-control" value="@Model.FirstName" />

    <label asp-for="LastName" class="control-label">Last Name</label>
    <input type="text" name="LastName" class="form-control" value="@Model.LastName" />

    <label asp-for="EmailAddress" class="control-label">Email Address</label>
    <input type="text" name="EmailAddress" class="form-control" value="@Model.EmailAddress" />

    <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
    <input type="text" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />

    <label asp-for="EventDescription" class="control-label">Event Description</label>
    <input type="text" name="EventDescription" class="form-control" value="@Model.EventDescription" />

    <div class="form-check" style="display: flex; justify-content: flex-end; margin-top: 20px;">
        <label asp-for="Contract" class="form-check-label" for="Contract" style= "margin-right: 50px">Contract</label>
        <input asp-for="Contract" class="form-check-input" id="Contract" style="transform: scale(1.25)" />
    </div>

    <div style="display: flex; justify-content: flex-end; margin-top: 20px;">
        <input type="submit" value="Update Event" class="btn btn-primary" />
    </div>

}