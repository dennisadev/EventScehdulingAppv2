@namespace EventSchedulingAppv2.Models
@model Event

<h2>Schedule an Event</h2>

@using (Html.BeginForm("AddEventToDatabase", "Event", "Post"))
{
    <input asp-for="EventID" type="hidden" value="" />

    <label asp-for="FirstName" class="control-label">First Name</label>
    <input type="text" name="FirstName" class="form-control" value="@Model.FirstName" />

    <label asp-for="LastName" class="control-label">Last Name</label>
    <input type="text" name="LastName" class="form-control" value="@Model.LastName" />

    <label asp-for="EmailAddress" class="control-label">Email Address</label>
    <input type="text" name="EmailAddress" class="form-control" value="@Model.EmailAddress" />

    <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
    <input type="text" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />

    <label asp-for="EventDate" class="control-label">Event Date</label>
    <input type="date" name="EventDate" class="form-control" value="@Model.EventDate" />

    <label asp-for="EventDescription" class="control-label">Event Description</label>
    <input type="text" name="EventDescription" class="form-control" value="@Model.EventDescription" />

    <label asp-for="Contract" class="control-label">Contract</label>
    <input type="checkbox" name="Contract" class="form-control" value="@Model.Contract" />

    <input type="submit" value="Insert Event" class="btn btn-primary" />
}
